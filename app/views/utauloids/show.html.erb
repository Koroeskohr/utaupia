<h1><%= @utauloid.name %></h1>
<p>Created by 
<% if @utauloid.creator_is_user %>
	<%= link_to @utauloid.creator.nickname, user_path(@utauloid.creator) %>
<% else %>
	<%= @utauloid.creator_name %>	
<% end %>
</p>

<% @comments.each do |c| %>
	<% if !c.message.blank? %>
		<%= render partial: "utauloid_comments/partials/show", locals: { comment: c } %>
	<% end %>
<% end %>
<%= render partial: "utauloid_comments/partials/new" %>
