<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "#{t('email')}", class: "form-control" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "#{t('password')}", class: "form-control" %>
  </div>
  <div class="form-group">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    <%= f.submit "#{t('login')}", class: "btn btn-primary" %>
  </div>
  <div class="form-group">
    <%= link_to "#{t('sign_up')}", new_user_registration_path, class: "btn btn-primary" %>
  </div>
<% end %>
