<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: ""}) do |f| %>
  <div class="form-group form-group-title">
    <span><%= t('login') %></span>
  </div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: t('email'), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('password'), class: "form-control" %>
  </div>
  <div class="form-group">
    <div>
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    </div>
  </div>
  <div class="form-group form-group-submit">
    <%= f.submit t('login'), class: "btn btn-success btn-white" %>
  </div>
  <div class="form-group">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('forgot_password'), new_password_path(resource_name) %>
    <% end -%>
    <%= link_to t('sign_up'), new_user_registration_path, class: "" %>
  </div>
<% end %>