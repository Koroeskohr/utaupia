<div class="flashes">
	<div class="container">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3">
			<% flash.each do |key, value| %>
			  <% key = "info" if key == "notice" || key == :notice %>
			  <% key = "danger" if key == "error" || key == :error %>
			  <% key = "danger" if key == "alert" || key == :alert %>
			  <% key = "info" if key == "info" || key == :info %>

			  <div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
		</div>
	</div>
</div>