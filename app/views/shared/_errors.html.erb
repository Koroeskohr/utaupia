<div class="flashes">
	<div class="container">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3">
		<% if entity.errors.any? %>
			<div class="alert alert-danger" role="alert">
				<ul>
			    <% entity.errors.full_messages.each do |error| %>
			      <li><%= error %></li>
			    <% end %>
			  </ul>
			</div>
		<% end %>
		</div>
	</div>
</div>