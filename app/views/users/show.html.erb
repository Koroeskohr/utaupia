<h1><%= @user.nickname %></h1>
<p><%= @user.email unless @user.nil? %></p>
<%= link_to 'Edit', edit_user_path(@user) unless current_user != @user %>
<% if current_user == @user %>
<%= link_to 'My Utauloids', utauloids_user_path(@user) %>
<% elsif @user.user_info.utauloids_are_showable %>
<%= link_to "#{@user.nickname}'s Utauloids", utauloids_user_path(@user) %>
<% end %>