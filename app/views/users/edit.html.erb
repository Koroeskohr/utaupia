<div class="user-edit">
	<%= render 'shared/errors', entity: @user %>
	<%= form_for @user, html: { multipart: true, class: 'form-horizontal' } do |form| %>
	  <div class="form-group">
	  	<%= form.label :nickname, t('name'), class: 'main-label col-sm-2 col-xs-12' %>
	  	<div class="col-sm-10 col-xs-12">
	  		<%= form.text_field :nickname, class: 'form-control' %>	
	  	</div>
	  </div>
	  <div class="user-edit-user-infos">
		  <%= form.fields_for :user_info do |builder| %>
		    <%= render "user_infos/partials/edit_user_infos", form: builder %>
		  <% end %>
	  </div>
		<%= link_to "Permanently delete my account", user_path(current_user.id), method: :delete, data: { confirm: "Are you sure? This is permanent and you wont ever be able to login with that account." } %>
	  <%= form.submit t('edit'), class: 'btn btn-success' %>
	  <%= link_to t('cancel'), account_path, class: 'btn btn-warning' %>
	<% end %>
</div>