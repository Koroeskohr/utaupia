<div class="form-group">
	<%= form.label :avatar, t('avatar'), class: 'main-label col-sm-2 col-xs-12' %>
	<div class='col-sm-3 col-xs-12'>
		<%= image_tag current_user.user_info.avatar.url(:thumb) %>
	</div>
	<div class="col-sm-3 col-xs-12">
		<%= form.file_field :avatar, class: '' %>
	</div>
</div>
<div class="form-group">
	<%= form.label :description, t('description'), class: 'main-label col-sm-2 col-xs-12' %>
	<div class="col-sm-10 col-xs-12">
		<%= form.text_area :description, class: 'form-control' %>	
	</div>
</div>
<div class="form-group">
	<%= form.label :favorites_are_showable, t('favorites_are_showable'), class: 'col-sm-6 col-xs-10' %>
	<%= form.check_box :favorites_are_showable, class: 'col-xs-1 col-xs-offset-1' %>	
</div>
<div class="form-group">
	<%= form.label :utauloids_are_showable, t('utauloids_are_showable'), class: 'col-sm-6 col-xs-10' %>
	<%= form.check_box :utauloids_are_showable, class: 'col-xs-1 col-xs-offset-1' %>
</div>
<div class="form-group">
	<%= form.label :notif_when_vb_updated, t('notif_when_vb_updated'), class: 'col-sm-6 col-xs-10' %>
	<%= form.check_box :notif_when_vb_updated, class: 'col-xs-1 col-xs-offset-1' %>
</div>
<div class="form-group">
	<%= form.label :notif_when_utauloid_faved, t('notif_when_utauloid_faved'), class: 'col-sm-6 col-xs-10' %>
	<%= form.check_box :notif_when_utauloid_faved, class: 'col-xs-1 col-xs-offset-1' %>
</div>
<div class="form-group">
	<%= form.label :notif_when_utauloid_commented, t('notif_when_utauloid_commented'), class: 'col-sm-6 col-xs-10' %>
	<%= form.check_box :notif_when_utauloid_commented, class: 'col-xs-1 col-xs-offset-1' %>
</div>
<div class="form-group">
	<h3 class="col-sm-12 col-xs-12" ><%= t('user_links') %></h3>
	<%= form.fields_for :user_links do |builder| %>
	  <%= render "user_links/partials/edit_user_links", form: builder %>
	<% end %>
</div>