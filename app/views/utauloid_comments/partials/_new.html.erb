<%= form_for @comment do |form| %>
	<%= form.text_field :message, class: 'form-control', placeholder: "#{t('add_comment')}#{current_user.blank? ? t('login_to_comment') : ''}", required: true %>
	<%= form.hidden_field :utauloid_id %>
  <%= form.submit "Submit your comment", class: 'btn btn-success' %>
<% end %>